<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fototipo.Fototipo_main"
    android:orientation="vertical"
    android:background="@drawable/uvapp_secondary"
   >



    <android.support.v7.widget.Toolbar
        android:layout_height="70dp"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/my_toolbar_main_test_opc"
        android:background="@color/primaryDarkColor"
        app:titleTextColor="@color/primaryTextColor"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:titleTextAppearance="@style/appbartitle"
        android:layout_margin="0dp"
        />


    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tu nickname"
            android:id="@+id/fm_nick"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/text_style"
            android:text="@string/Fototipo_main_text1"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fm_use_detector_device"
                android:onClick="test_visual"
                android:text="@string/Fototipo_device_button_text1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fm_help_visual_test" />
        </LinearLayout>




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/text_style"
            android:text="@string/Fototipo_main_text2"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Fototipo_main_button_text2"
            android:onClick="test_fitzpatrick"
            android:id="@+id/fm_button_test"/>


</LinearLayout>