<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
    android:id="@+id/fvt_testing_contenedor">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fvt_testing_label"
            android:text="@string/Fototipo_visual_test_text1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="50dp">

        <TextView
            android:id="@+id/fvt_testing_fototipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/fototipo_label_result" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fvt_testing_rgb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/fvt_testing_skin"
                android:layout_width="50px"
                android:layout_height="50px" />

        </LinearLayout>


    </LinearLayout>

    </LinearLayout>