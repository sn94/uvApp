<resources>




    <style name="boton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/botones_selector</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="edittexto" parent="Widget.AppCompat.EditText">
        <item name="android:radius">15dp</item>
        <item name="android:textColor">#000033</item>
        <item name="android:textSize"> 25dp</item>
        <item name="android:fontFamily"> @font/general</item>
        <item name="android:background">#ffeeee</item>
        <item name="android:padding">10dp</item>
    </style>



    <style name="fototipo_label_result">
        <item name="android:shadowColor"> @color/black</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">5</item>
        <item name="android:fontFamily"> @font/dkbluesheep</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/button_normal</item>
        <item name="android:textSize">100sp</item>
    </style>


    <style name="title_style">
        <item name="android:textAlignment">center</item>
        <item name="android:shadowColor"> @color/light_black</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">5</item>
        <item name="android:fontFamily"> @font/dkbluesheep</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/button_normal</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="text_style">
        <item name="android:fontFamily"> @font/dkbluesheep</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textSize"> 20dp</item>
        <item name="android:fontFamily"> @font/general</item>
        <item name="buttonStyle">@style/boton</item>
        <item name="editTextStyle">@style/edittexto</item>



    </style>

</resources>