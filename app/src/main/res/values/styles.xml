<resources>




    <style name="boton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/botones_selector</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="edittexto" parent="Widget.AppCompat.EditText">
        <item name="android:radius">15dp</item>
        <item name="android:textColor">#000033</item>
        <item name="android:textSize"> 25dp</item>
        <item name="android:fontFamily"> @font/general</item>
        <item name="android:background">#ffeeee</item>
        <item name="android:padding">10dp</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textSize"> 20dp</item>
        <item name="android:fontFamily"> @font/general</item>
        <item name="buttonStyle">@style/boton</item>
        <item name="editTextStyle">@style/edittexto</item>



    </style>

</resources>